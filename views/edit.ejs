<%- include('partials/header.ejs') %>
    <div class="form-container">
        <form action="/edited/<%= post.id %>" method="post">
            <h3>Edit your blog</h3>
            <div class="sub-form">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%= post.title %>">
                <label for="images" class="drop-container" id="dropcontainer">
                    <img src="/images/upload.png" alt="upload image" class="upload-pic" height="40">
                    <input type="text" id="author" name="imageUrl" placeholder="Add image URL" value="<%= post.imageUrl %>">
                </label>
                <label for="code">Access Code</label>
                <input type="text" id="code" name="code" value="<%= post.code %>" >
            </div>

            <div class="sub-form">
                <label for="content">Content</label>
                <textarea id="content" name="content"><%= post.content %></textarea>
                <label for="author">Author</label>
                <input type="text" id="author" name="author" value="<%= post.author %>">
                <button type="submit" class="submit-btn">Update</button>
            </div>
        </form>
    </div>
    <%- include('partials/footer.ejs') %>